# Configuración de KICS (Keeping Infrastructure as Code Secure)

# Excluir directorios
exclude-paths:
  - "node_modules"
  - ".git"
  - "venv"
  - "temp_venv"
  - "**/__pycache__"
  - "**/.pytest_cache"
  - "**/dist"
  - "**/build"
  - "**/.vscode"
  - "**/.idea"
  - "**/docs/_build"

# Tipos de archivos a escanear
type:
  - "Dockerfile"
  - "Docker Compose"
  - "Terraform"
  - "CloudFormation"
  - "Kubernetes"
  - "Ansible"
  - "Python"
  - "JavaScript"
  - "TypeScript"
  - "JSON"
  - "YAML"
  - "Helm"

# Severidades a reportar
severity:
  - "HIGH"
  - "MEDIUM"
  - "LOW"
  - "INFO"

# Configuración de salida
output-formats:
  - "json"
  - "sarif"
  - "html"

# Directorio de salida
output-path: "security-reports"

# Configuración de CI/CD
ci: true

# Fallar en severidades específicas
fail-on:
  - "HIGH"
  - "MEDIUM"

# Número máximo de problemas a reportar (0 = sin límite)
queries-max-results: 0

# Tiempo de espera en segundos
timeout: 300

# Configuración de paralelismo
parallel: 4

# Configuración de verbosidad
verbose: false

# Ignorar resultados específicos
ignore-on-exit:
  - "all"
